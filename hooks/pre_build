#!/bin/bash

if [[ "$SOURCE_BRANCH" = "feature/automated_builds" ]]; then
    # substitute commands for checkout.sh
    sed -i "s|~/src/docker/checkout.sh|git clone https://github.com/usdot-fhwa-stol/CARMAMsgs.git ~/src/CARMAMsgs --branch develop --depth 1 \&\& git clone https://github.com/usdot-fhwa-stol/CARMAUtils.git ~/src/CARMAUtils --branch develop --depth 1|g" \
        Dockerfile
    # substitute docker base image repo name and tag
    sed -i "s|usdotfhwastol|stableusdotfhwastol|g; s|:[0-9]*\.[0-9]*\.[0-9]*|:stable|g" \
        Dockerfile
fi